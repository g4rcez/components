{
  "name": "@g4rcez/components",
  "version": "0.0.35",
  "sideEffects": false,
  "private": false,
  "packageManager": "pnpm@8.15.3",
  "publishConfig": {
    "directory": "dist"
  },
  "engines": {
    "node": ">=20.14.0"
  },
  "author": {
    "email": "allan.f.garcez@gmail.com",
    "name": "Allan Garcez",
    "url": "https://garcez.dev"
  },
  "bugs": {
    "url": "https://github.com/g4rcez/components/issues"
  },
  "repository": {
    "url": "https://github.com/g4rcez/components",
    "type": "git"
  },
  "license": "MIT",
  "scripts": {
    "watch": "vite build --watch --minify false",
    "build": "vite build; npm run lib:types; npm run preset; npm run lib:css",
    "format": "npx prettier --write .",
    "lib:css": "BUILD_LIB=true tailwind -i ./src/index.css -o ./dist/index.css --minify",
    "lib:tailwind": "tsc -p tsconfig.tailwind.json",
    "lib:types": "tsc -p tsconfig.lib.json",
    "preset": "tsc -p tsconfig.tailwind.json",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@floating-ui/react": "0.26.20",
    "@radix-ui/react-slot": "1.1.0",
    "@radix-ui/react-toast": "1.2.1",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.1",
    "date-fns": "3.6.0",
    "framer-motion": "11.3.8",
    "fuzzy-search": "3.2.1",
    "linq-arrays": "3.2.5",
    "lucide-react": "0.414.0",
    "pretty-bytes": "6.1.1",
    "qs": "6.12.3",
    "react-dropzone": "14.2.3",
    "react-use-measure": "2.1.1",
    "react-virtuoso": "4.7.13",
    "sidekicker": "0.1.8",
    "storage-manager-js": "4.2.6-5",
    "tailwind-merge": "2.4.0",
    "the-mask-input": "3.3.12",
    "use-typed-reducer": "4.2.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "0.5.7",
    "@types/fuzzy-search": "2.1.5",
    "@types/node": "20.14.11",
    "@types/qs": "6.9.15",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "4.3.1",
    "postcss": "8.4.39",
    "prettier": "3.3.3",
    "tailwindcss": "3.4.4",
    "tslib": "2.6.3",
    "typescript": "5.5.4",
    "vite": "5.3.4",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "2.0.4"
  },
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.umd.js",
  "browser": "./dist/index.umd.js",
  "module": "./dist/index.cjs",
  "files": [
    "dist",
    "dist/index.css"
  ],
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.ts",
        "default": "./dist/index.d.ts"
      },
      "default": {
        "type": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.umd.js",
        "default": "./dist/index.mjs"
      }
    },
    "./index.css": "./dist/index.css",
    "./dist/index.css": "./dist/index.css",
    "./themes": {
      "type": "./dist/preset/src/styles/theme.d.ts",
      "import": "./dist/preset/src/styles/theme.js",
      "require": "./dist/preset/src/styles/theme.js",
      "default": "./dist/preset/src/styles/theme.js"
